</BaseLayout>

<style>
  /* Hero Section */
  .hero-section {
    padding: 6rem 1.5rem 5rem;
    background: radial-gradient(ellipse at top, var(--peach), var(--cream));
    margin-top: -1rem;
  }

  .hero-container {
    max-width: 900px;
    margin: 0 auto;
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.75rem;
  }

  .hero-title {
    font-size: clamp(2.5rem, 5vw + 1rem, 4.5rem);
    font-weight: 800;
    margin: 0;
    color: var(--cocoa);
    line-height: 1.1;
  }

  .hero-subtitle {
    font-size: clamp(1.125rem, 2vw + 0.5rem, 1.375rem);
    line-height: 1.6;
    color: var(--ink);
    margin: 0;
    max-width: 700px;
  }

  .cta-group {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    justify-content: center;
    margin-top: 0.5rem;
  }

  /* Section Styles */
  .section-title {
    font-size: clamp(2rem, 3vw + 1rem, 3rem);
    font-weight: 800;
    text-align: center;
    margin: 0 0 1rem 0;
    color: var(--cocoa);
  }

  .section-subtitle {
    font-size: 1.25rem;
    text-align: center;
    color: var(--ink);
    margin: 0 auto 3rem;
    max-width: 600px;
  }

  .features-section {
    background: var(--cream);
  }

  .feature-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  /* How It Works Section */
  .how-it-works-section {
    background: linear-gradient(135deg, var(--sky), var(--mint));
  }

  .steps {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    margin-top: 3rem;
  }

  .step {
    display: flex;
    gap: 2rem;
    align-items: flex-start;
  }

  .step-number {
    flex-shrink: 0;
    width: 60px;
    height: 60px;
    background: linear-gradient(135deg, var(--leaf), #5a9764);
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.75rem;
    font-weight: 800;
    box-shadow: 0 8px 20px rgba(77, 127, 87, 0.25);
  }

  .step-content {
    flex: 1;
  }

  .step-title {
    font-size: 1.5rem;
    font-weight: 700;
    margin: 0 0 0.5rem 0;
    color: var(--cocoa);
  }

  .step-description {
    font-size: 1.125rem;
    color: var(--ink);
    margin: 0;
    line-height: 1.6;
  }

  /* Social Proof Section */
  .social-proof-section {
    background: var(--butter);
  }

  .testimonial {
    background: rgba(255, 255, 255, 0.7);
    backdrop-filter: blur(10px);
    border-radius: 20px;
    padding: 2rem;
    border: 1px solid rgba(76, 43, 27, 0.08);
    text-align: center;
  }

  .testimonial-icon {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .testimonial-text {
    font-size: 1.05rem;
    line-height: 1.6;
    color: var(--ink);
    margin: 0 0 1rem 0;
    font-style: italic;
  }

  .testimonial-author {
    font-size: 0.95rem;
    font-weight: 600;
    color: var(--berry);
    margin: 0;
  }

  .cta-center {
    text-align: center;
    margin-top: 2.5rem;
  }

  /* Final CTA Section */
  .final-cta-section {
    background: var(--cream);
  }

  .cta-box {
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
    background: linear-gradient(135deg, var(--apricot), var(--sunset));
    border-radius: 32px;
    padding: 4rem 3rem;
    box-shadow: 0 20px 50px rgba(76, 43, 27, 0.15);
  }

  .cta-title {
    font-size: clamp(2rem, 3vw + 1rem, 3rem);
    font-weight: 800;
    margin: 0 0 1rem 0;
    color: var(--cocoa);
  }

  .cta-subtitle {
    font-size: 1.25rem;
    color: var(--ink);
    margin: 0 0 2rem 0;
    line-height: 1.6;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .hero-section {
      padding: 4rem 1.5rem 3rem;
    }

    .step {
      flex-direction: column;
      gap: 1rem;
    }

    .step-number {
      width: 50px;
      height: 50px;
      font-size: 1.5rem;
    }

    .cta-box {
      padding: 3rem 2rem;
    }
  }
</style>
