---
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import BaseLayout from "../../layouts/BaseLayout.astro";

export async function getStaticPaths() {
  const blogPosts = await getCollection('blog');
  return blogPosts.map(post => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

interface Props {
  post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;
const { Content } = await post.render();

// Format date
const formattedDate = new Date(post.data.date).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});

// Calculate read time
function calculateReadTime(content: string): string {
  const wordsPerMinute = 200;
  const wordCount = content.split(/\s+/).length;
  const minutes = Math.ceil(wordCount / wordsPerMinute);
  return `${minutes} min read`;
}

const readTime = calculateReadTime(post.body);
---

<BaseLayout 
  title={`${post.data.title} - Journal App Blog`}
  description={post.data.description}
>
  <article class="blog-post">
    <!-- Post Header -->
    <header class="post-header">
      <div class="post-header-container">
        <a href="/blog" class="back-link">← Back to Blog</a>
        
        <h1 class="post-title">{post.data.title}</h1>
        
        <div class="post-meta">
          <span class="post-author">{post.data.author}</span>
          <span class="meta-separator">·</span>
          <time datetime={post.data.date}>{formattedDate}</time>
          <span class="meta-separator">·</span>
          <span class="read-time">{readTime}</span>
        </div>

        {post.data.tags && post.data.tags.length > 0 && (
          <div class="post-tags">
            {post.data.tags.map(tag => (
              <span class="tag">{tag}</span>
            ))}
          </div>
        )}
      </div>
    </header>

    <!-- Post Content -->
    <div class="post-content">
      <div class="post-content-container">
        <Content />
      </div>
    </div>

    <!-- Post Footer -->
    <footer class="post-footer">
      <div class="post-footer-container">
        <div class="post-cta">
          <h2>Start your journaling practice today</h2>
          <p>Experience the benefits of daily reflection with Journal App.</p>
          <a href="/app" class="btn btn-primary">Get Started Free</a>
        </div>

        <div class="post-navigation">
          <a href="/blog" class="btn btn-ghost">← All Posts</a>
        </div>
      </div>
    </footer>
  </article>
</BaseLayout>

<style>
  .blog-post {
    background: var(--cream);
    min-height: 100vh;
  }

  /* Header */
  .post-header {
    background: linear-gradient(135deg, var(--apricot), var(--sky));
    padding: 3rem 1.5rem 4rem;
    margin-top: -1rem;
  }

  .post-header-container {
    max-width: 800px;
    margin: 0 auto;
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    font-weight: 600;
    color: var(--cocoa);
    margin-bottom: 2rem;
    transition: transform 0.2s ease;
  }

  .back-link:hover {
    transform: translateX(-4px);
    opacity: 1;
  }

  .post-title {
    font-size: clamp(2rem, 4vw + 1rem, 3.5rem);
    font-weight: 800;
    color: var(--cocoa);
    margin: 0 0 1.5rem 0;
    line-height: 1.2;
  }

  .post-meta {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    flex-wrap: wrap;
    font-size: 1rem;
    color: var(--ink);
    margin-bottom: 1.5rem;
  }

  .post-author {
    font-weight: 700;
    color: var(--berry);
  }

  .meta-separator {
    color: var(--ink);
    opacity: 0.5;
  }

  .read-time {
    font-weight: 600;
  }

  .post-tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .tag {
    background: rgba(255, 255, 255, 0.7);
    padding: 0.375rem 0.875rem;
    border-radius: 999px;
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--cocoa);
    border: 1px solid rgba(76, 43, 27, 0.15);
  }

  /* Content */
  .post-content {
    padding: 4rem 1.5rem;
  }

  .post-content-container {
    max-width: 720px;
    margin: 0 auto;
    background: rgba(255, 255, 255, 0.85);
    backdrop-filter: blur(10px);
    border-radius: 24px;
    padding: 3rem;
    border: 1px solid rgba(76, 43, 27, 0.1);
    box-shadow: 0 8px 24px rgba(76, 43, 27, 0.08);
  }

  /* Markdown Styles */
  .post-content-container :global(h1) {
    font-size: 2.25rem;
    font-weight: 800;
    color: var(--cocoa);
    margin: 2rem 0 1rem 0;
    line-height: 1.2;
  }

  .post-content-container :global(h2) {
    font-size: 1.875rem;
    font-weight: 700;
    color: var(--cocoa);
    margin: 2.5rem 0 1rem 0;
    line-height: 1.3;
  }

  .post-content-container :global(h3) {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--cocoa);
    margin: 2rem 0 0.75rem 0;
  }

  .post-content-container :global(p) {
    font-size: 1.125rem;
    line-height: 1.8;
    color: var(--ink);
    margin: 0 0 1.5rem 0;
  }

  .post-content-container :global(ul),
  .post-content-container :global(ol) {
    margin: 0 0 1.5rem 0;
    padding-left: 1.75rem;
  }

  .post-content-container :global(li) {
    font-size: 1.125rem;
    line-height: 1.8;
    color: var(--ink);
    margin-bottom: 0.75rem;
  }

  .post-content-container :global(strong) {
    font-weight: 700;
    color: var(--cocoa);
  }

  .post-content-container :global(a) {
    color: var(--leaf);
    font-weight: 600;
    text-decoration: underline;
    text-decoration-color: var(--leaf);
    text-underline-offset: 2px;
  }

  .post-content-container :global(a:hover) {
    text-decoration-color: var(--berry);
    opacity: 1;
  }

  .post-content-container :global(blockquote) {
    border-left: 4px solid var(--berry);
    padding-left: 1.5rem;
    margin: 1.5rem 0;
    font-style: italic;
    color: var(--ink);
  }

  .post-content-container :global(hr) {
    border: none;
    border-top: 2px solid rgba(76, 43, 27, 0.15);
    margin: 2.5rem 0;
  }

  /* Footer */
  .post-footer {
    padding: 0 1.5rem 4rem;
  }

  .post-footer-container {
    max-width: 800px;
    margin: 0 auto;
  }

  .post-cta {
    background: linear-gradient(135deg, var(--sunset), var(--berry));
    border-radius: 24px;
    padding: 3rem 2rem;
    text-align: center;
    margin-bottom: 2rem;
    box-shadow: 0 12px 32px rgba(76, 43, 27, 0.15);
  }

  .post-cta h2 {
    font-size: 2rem;
    font-weight: 800;
    color: white;
    margin: 0 0 0.75rem 0;
  }

  .post-cta p {
    font-size: 1.125rem;
    color: rgba(255, 255, 255, 0.95);
    margin: 0 0 1.5rem 0;
  }

  .post-navigation {
    text-align: center;
  }

  @media (max-width: 768px) {
    .post-header {
      padding: 2.5rem 1.5rem 3rem;
    }

    .post-content {
      padding: 3rem 1.5rem;
    }

    .post-content-container {
      padding: 2rem 1.5rem;
    }

    .post-cta {
      padding: 2.5rem 1.5rem;
    }
  }
</style>
