---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../../../shared/theme.css";
import "../styles/global.css";

interface Props {
  title?: string;
  description?: string;
  image?: string;
  type?: "website" | "article";
}

const { 
  title = "Journal App - Your Personal Reflection Space",
  description = "Write it out. Warm up your day. Journal App keeps your reflections gentle, organized, and bright.",
  image = "/images/og-default.png",
  type = "website"
} = Astro.props;

const siteUrl = Astro.site ? Astro.site.href : "https://journal-app.com"; // Fallback URL
const ogImage = new URL(image, siteUrl).href;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    
    <!-- Open Graph / Social Media -->
    <meta property="og:type" content={type} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={ogImage} />
    
    <!-- Favicon -->
    <link rel="icon" href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><text y='.9em' font-size='90'>ðŸ“”</text></svg>" />
    <style>
      * {
        box-sizing: border-box;
      }

      body {
        margin: 0;
        color: var(--cocoa);
        background: radial-gradient(circle at top, var(--peach), #fff);
      }

      main {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
      }

      a {
        color: inherit;
        text-decoration: none;
      }

      .page {
        flex: 1;
        display: grid;
        place-items: center;
        padding: 4rem 1.5rem;
      }

      .hero {
        max-width: 900px;
        display: grid;
        gap: 2rem;
        background: linear-gradient(120deg, var(--apricot), var(--sky));
        border-radius: 32px;
        padding: 3rem;
        box-shadow: 0 18px 40px rgba(76, 43, 27, 0.12);
      }

      .badge {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        font-weight: 700;
        padding: 0.4rem 0.9rem;
        background: white;
        border-radius: 999px;
        width: fit-content;
      }

      h1 {
        font-size: clamp(2.3rem, 3vw + 1rem, 3.8rem);
        margin: 0;
      }

      p {
        font-size: 1.1rem;
        line-height: 1.6;
      }

      .cta-row {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
      }

      .cta {
        background: var(--leaf);
        color: white;
        padding: 0.9rem 1.6rem;
        border-radius: 999px;
        font-weight: 700;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        box-shadow: 0 12px 20px rgba(79, 127, 82, 0.25);
      }

      .ghost {
        background: white;
        color: var(--cocoa);
        border: 2px solid rgba(76, 43, 27, 0.2);
      }

      .feature-grid {
        display: grid;
        gap: 1.2rem;
        grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
      }

      .feature {
        background: rgba(255, 255, 255, 0.75);
        border-radius: 20px;
        padding: 1.2rem;
        border: 1px solid rgba(76, 43, 27, 0.1);
      }

      footer {
        text-align: center;
        padding: 2rem 1.5rem;
        font-size: 0.95rem;
      }

      @media (max-width: 720px) {
        .hero {
          padding: 2rem;
        }
      }
    </style>
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
