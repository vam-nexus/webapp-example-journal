---
interface Props {
  title: string;
  excerpt: string;
  date: string;
  slug: string;
  image?: string;
  readTime?: string;
}

const { title, excerpt, date, slug, image, readTime } = Astro.props;

// Format date
const formattedDate = new Date(date).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<article class="blog-card">
  {image && (
    <div class="blog-card-image">
      <img src={image} alt={title} loading="lazy" />
    </div>
  )}
  
  <div class="blog-card-content">
    <div class="blog-card-meta">
      <time datetime={date}>{formattedDate}</time>
      {readTime && <span class="read-time">· {readTime}</span>}
    </div>
    
    <h3 class="blog-card-title">
      <a href={`/blog/${slug}`}>{title}</a>
    </h3>
    
    <p class="blog-card-excerpt">{excerpt}</p>
    
    <a href={`/blog/${slug}`} class="blog-card-link">
      Read more <span aria-hidden="true">→</span>
    </a>
  </div>
</article>

<style>
  .blog-card {
    background: rgba(255, 255, 255, 0.85);
    backdrop-filter: blur(10px);
    border-radius: 24px;
    overflow: hidden;
    border: 1px solid rgba(76, 43, 27, 0.1);
    box-shadow: 0 8px 24px rgba(76, 43, 27, 0.08);
    transition: all 0.3s ease;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .blog-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 16px 40px rgba(76, 43, 27, 0.15);
  }

  .blog-card-image {
    width: 100%;
    height: 220px;
    overflow: hidden;
    background: linear-gradient(135deg, var(--apricot), var(--sky));
  }

  .blog-card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .blog-card:hover .blog-card-image img {
    transform: scale(1.05);
  }

  .blog-card-content {
    padding: 1.75rem;
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .blog-card-meta {
    font-size: 0.875rem;
    color: var(--berry);
    font-weight: 600;
    margin-bottom: 0.75rem;
  }

  .read-time {
    color: var(--ink);
    opacity: 0.7;
  }

  .blog-card-title {
    font-size: 1.375rem;
    font-weight: 700;
    margin: 0 0 0.75rem 0;
    color: var(--cocoa);
    line-height: 1.3;
  }

  .blog-card-title a {
    color: inherit;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .blog-card-title a:hover {
    color: var(--leaf);
    opacity: 1;
  }

  .blog-card-excerpt {
    font-size: 1rem;
    color: var(--ink);
    line-height: 1.6;
    margin: 0 0 1.25rem 0;
    flex: 1;
  }

  .blog-card-link {
    font-weight: 700;
    color: var(--leaf);
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    font-size: 0.95rem;
    text-decoration: none;
    width: fit-content;
    transition: gap 0.2s ease;
  }

  .blog-card-link:hover {
    gap: 0.625rem;
    opacity: 1;
  }
</style>
