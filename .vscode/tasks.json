                "cwd": "${workspaceFolder}/frontend/app"
            },
            "problemMatcher": [],
            "presentation": {
                "group": "server",
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Run Web",
            "type": "shell",
            "command": "npm run dev",
            "options": {
                "cwd": "${workspaceFolder}/frontend/web"
            },
            "problemMatcher": [],
            "presentation": {
                "group": "server",
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Run All",
            "dependsOn": [
                "Run Backend",
                "Run UI",
                "Run Web"
            ],
            "problemMatcher": []
