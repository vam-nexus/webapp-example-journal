            "type": "shell",
            "command": "uv run uvicorn app.main:app --reload",
            "problemMatcher": [],
            "presentation": {
                "group": "server",
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Run UI",
            "type": "shell",
            "command": "npm run dev",
